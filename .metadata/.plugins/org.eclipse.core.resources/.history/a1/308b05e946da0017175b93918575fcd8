package com.solowrap.test;

import android.app.Activity;
import android.test.AssertionFailedError;
import android.util.Log;
import android.view.View;

import com.robotium.solo.Solo;

@SuppressWarnings("deprecation")
public class SoloWrap {
	private Solo solo;
public SoloWrap(Solo solo){
	this.solo = solo;
}
public void clickOnTest(String text){
	Log.i("AUTO", "点击文本"+text);
	solo.clickOnText(text);
}
public View getView(String id) {
	try{
		return solo.getView(id);
	}catch(AssertionFailedError a){
		return null;
	}
	}
public void clickOnView(View id){
	Log.i("AUTO", "点击按钮"+id);
	solo.clickOnView(id);
}
public void finishOpenedActivities(){
	solo.finishOpenedActivities();
}
public void sleep(int time){
	Log.i("AUTO", "暂停N"+time);
	solo.sleep(time);
}
public Activity getCurrentActivity() {
	return solo.getCurrentActivity();
}


}
